{
  "name": "marmokbot",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "main": "build/main.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --watch 'src/**/*.ts' --exec \"node --no-warnings --loader ts-node/esm src/main.ts\"",
    "start": "node build/main.js",
    "watch": "nodemon -e ts --watch src --exec npm run dev",
    "migrate": "ts-node ./src/migrations/migrate.ts",
    "dev:css": "tailwindcss -i ./src/styles.css -o ./services/logServer/public/css/style.css --watch",
    "build:css": "tailwindcss -i ./src/styles.css -o ./services/logServer/public/css/style.css --minify"
  },
  "dependencies": {
    "@discordx/importer": "^1.3.1",
    "@discordx/pagination": "^3.5.5",
    "@fortawesome/fontawesome-free": "^6.7.2",
    "axios": "^1.8.4",
    "canvas": "^2.11.2",
    "chokidar": "^4.0.3",
    "discord.js": "^14.17.3",
    "discordx": "^11.12.2",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-basic-auth": "^1.2.1",
    "express-ejs-layouts": "^2.5.1",
    "fast-average-color-node": "^3.1.0",
    "lodash": "^4.17.21",
    "mysql2": "^3.14.0",
    "reflect-metadata": "^0.2.2",
    "serve-index": "^1.9.1",
    "typeorm": "^0.3.22",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/chokidar": "^1.7.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.1",
    "@types/express-ejs-layouts": "^2.5.4",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.14.1",
    "@types/serve-index": "^1.9.2",
    "autoprefixer": "^10.4.16",
    "nodemon": "^3.1.9",
    "postcss": "^8.4.31",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}
